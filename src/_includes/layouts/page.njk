---
layout: layouts/base.njk
---

{% set created = page.inputPath | stat("birthtime") | nchrsDate %}
{% set updated = page.inputPath | stat("mtime") | nchrsDate%}


<main class="shadow shadowPlus4">
	{% if navi.cover %}<section><img src="{{ navi.cover }}" /></section>{% endif %}

	<article>
		
		{% if hideTitle %}
		{% else %}
		  {% if navi.excerpt %}{% set excerpt = ("<span>" + navi.excerpt + "</span>") | safe %}
		  {% else %}{% set excerpt = "" %}
		  {% endif %}
		  {% if altTitle %}<h1>{{ altTitle }}{{ excerpt }}</h1>
		  {% else %}<h1>{{ page.url | urlToTitle | splitWords | capitalize }}{{ excerpt }}</h1>
		  {% endif %}
		{% endif %}
		
		{{ content | safe }}
		
	</article>
	<hr class="divider" />
	<div style="margin-bottom:1px; margin-top: -2px; margin-left:10px;"><span style="font-size: 12px;">
	>> page created on {{ created }}{% if created!=updated %} &Delta; {{ updated }}{% endif %}
	</span><a href="#"><img class = "back-to-top icon" src="{{ "/" | url }}assets/icons/arrow_up.svg" /></a></div>
</main>


{% if navi.reverse %}
  {% set listing = collections.all | navi(navi.key) | reverse %}
{% else %}
  {% set listing = collections.all | navi(navi.key) %}
{% endif %}

{% if listing.length %}
			
<nav class="flex-container" style="margin-top: 20px; margin-bottom: -1em;">
		{%- for item in listing  %}
			{% set kolor =  [1, 2, 3 ] | removeVal(kolor) | random %}
			
			{%if item.excerpt %}
				{% set excerpt = " â€” " + item.excerpt %}
			{% endif %}

			{% if item.altTitle %}
				{% set title = item.altTitle %}
			{% else %}
				{% set title = item.title | splitWords | capitalize %}
			{% endif %}
			
			<article class="grid-card bloop-base bloop{{kolor}}">
			<a href="{{ item.url }}"><img src="https://apiellugar.nyc3.digitaloceanspaces.com/media/images/Pullfrog20200731194020.png"><div class="grid-card-info">{{ title }}</div></a>
			</article>
			
		{%- endfor%}
</nav>

{% endif %}